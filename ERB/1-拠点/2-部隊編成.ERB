@部隊編成, 部隊ID
#DIM DYNAMIC 部隊ID
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC LCOUNT2
#DIM DYNAMIC 隊員 = -1, -1, -1
#DIM DYNAMIC 対象

FOR LCOUNT, 0, CHARANUM
	SIF ステータス:所属部隊 == 部隊ID
		ARRAYSHIFT 隊員, 1, LCOUNT
NEXT

DRAWLINE
FOR LCOUNT, 0, 3
	IF 隊員:LCOUNT == -1
		PRINTFORML 　空き [{LCOUNT}] - 配属
		CONTINUE
	ENDIF
	対象 = 隊員:LCOUNT
	DRAWLINE
	PRINTFORML 　名前:%NAME:対象% 職業:%CSTR:対象:職業% 性格:%CSTR:対象:職業% [{LCOUNT}] - 変更
	FOR LCOUNT2, 0, 6
		SIF LCOUNT2%2 == 0
			PRINT 　
		PRINTFORM %ERDNAME("ステータス", LCOUNT)%%"■"*ステータス:対象:LCOUNT2%%"□"*(20-ステータス:対象:LCOUNT2)% {ステータス:対象:LCOUNT} 
		SIF LCOUNT2%2 == 1
			PRINTL 
	NEXT
NEXT

DRAWLINE
PRINTPLAINFORM 　部隊{部隊ID}　
PRINTL [100] 戻る

CALL INPUTF, 0, 1, 2, 100

SELECTCASE RESULT
	CASE 100
		RETURN
ENDSELECT
