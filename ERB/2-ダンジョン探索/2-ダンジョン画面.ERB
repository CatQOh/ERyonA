@戦闘画面, DID
#DIM DYNAMIC DID
#DIM DYNAMIC 部隊ID
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC 対象
#DIM DYNAMIC ISBREAK

部隊ID = FINDELEMENT(部隊目標, DID)

SELECTCASE 行動内容:DID
	CASE "通常攻撃"
	CASE "スキル"
	CASE "アイテム"
	CASE "逃走"
	CASEELSE
		行動可能:DID = -1
		FOR LCOUNT, 0, 3
			SIF !部隊メンバー:部隊ID:LCOUNT
				CONTINUE
			対象 = GETCHARA(部隊メンバー:部隊ID:LCOUNT)
			IF ステータス:対象:TG >= 10000
				行動可能:DID = LCOUNT
				GOTO BREAK
			ENDIF
		NEXT
		FOR LCOUNT, 0, 5
			SIF 敵名:DID:LCOUNT == ""
				CONTINUE
			IF 敵ステータス:DID:LCOUNT:TG >= 10000
				行動可能:DID = LCOUNT+10
				GOTO BREAK
			ENDIF
		NEXT

		DO
			FOR LCOUNT, 0, 3
				SIF !部隊メンバー:部隊ID:LCOUNT
					CONTINUE
				対象 = GETCHARA(部隊メンバー:部隊ID:LCOUNT)
				ステータス:対象:TG += 100
				ステータス:対象:TG += ステータス:対象:器用*5
				IF ステータス:対象:TG >= 10000
					SIF 行動可能:DID == -1
						行動可能:DID = LCOUNT
					ISBREAK = 1
				ENDIF
			NEXT
			FOR LCOUNT, 0, 5
				SIF 敵名:DID:LCOUNT == ""
					CONTINUE
				敵ステータス:DID:LCOUNT:TG += 100
				敵ステータス:DID:LCOUNT:TG += 敵ステータス:DID:LCOUNT:器用*5
				IF 敵ステータス:DID:LCOUNT:TG >= 10000
					SIF 行動可能:DID == -1
						行動可能:DID = LCOUNT+10
					ISBREAK = 1
				ENDIF
			NEXT
			SIF ISBREAK
				BREAK
		LOOP 1
ENDSELECT

$BREAK

CALL 戦闘用部隊メンバー表示, 部隊ID
;CALL COLUMNPRINTL, 0, ""
;CALL COLUMNPRINTL, 0, "[3] - アイテム"
CALL 敵表示, DID

IF 敵数(DID) == 0
	CALL COLUMNPRINTL, 0, "戦闘に勝利した！"
	CALL COLUMNPRINTL, 0, "[30] 探索に戻る"
ELSEIF 行動可能:DID < 10
	対象 = GETCHARA(部隊メンバー:部隊ID:(行動可能:DID))
	CALL COLUMNPRINTL, 0, @"%NAME:対象%のターン"
	SELECTCASE 行動内容:DID
		CASE "通常攻撃"
			IF 攻撃対象:DID == -1
				CALL COLUMNPRINTL, 0, "誰を攻撃しますか？"
			ELSE
				IF 攻撃対象:DID < 10
					CALL COLUMNPRINTL, 0, @""
				ELSE
					CALL COLUMNPRINTL, 0, @"%NAME:対象%は%敵名:DID:(攻撃対象:DID-10)%を攻撃した！"
					CALL COLUMNPRINTL, 0, @"{ダメージ:DID}のダメージ！"
					SIF ダメージ:DID >= 敵ステータス:DID:(攻撃対象:DID-10):HP
						CALL COLUMNPRINTL, 0, 死亡メッセージ(敵名:DID:(攻撃対象:DID-10), "剣撃")
				ENDIF
				CALL COLUMNPRINTL, 0, "[30] 戦闘継続"
			ENDIF
		CASEELSE
			CALL COLUMNPRINTL, 0, @"[20] 通常攻撃 [21] スキル [22] アイテム [23] 逃走"
	ENDSELECT
ELSE
	対象 = 行動可能:DID-10
	CALL COLUMNPRINTL, 0, @"%敵名:DID:対象%のターン"
ENDIF

@戦闘画面_INPUT, DID
#DIM DYNAMIC DID
#DIM DYNAMIC 対象
#DIM DYNAMIC 部隊ID
#DIM DYNAMIC LCOUNT

部隊ID = FINDELEMENT(部隊目標, DID)

IF 敵数(DID) == 0
	行動内容:DID =
	行動可能:DID = -1
	攻撃対象:DID = -1
	ダメージ:DID = 0
	戦闘中:DID = 0
	FOR LCOUNT, 0, 10
		CALL COLUMNBGCOLOR, LCOUNT, "black"
	NEXT
ELSEIF 行動可能:DID < 10
	対象 = GETCHARA(部隊メンバー:部隊ID:(行動可能:DID))
	SELECTCASE 行動内容:DID
		CASE "通常攻撃"
			IF 攻撃対象:DID >= 0
				IF 攻撃対象:DID < 10
				ELSE
					敵ステータス:DID:(攻撃対象:DID-10):HP -= ダメージ:DID
					SIF 敵ステータス:DID:(攻撃対象:DID-10):HP <= 0
						敵名:DID:(攻撃対象:DID-10) =
				ENDIF
				行動内容:DID =
				行動可能:DID = -1
				攻撃対象:DID = -1
				ダメージ:DID = 0
				ステータス:対象:TG -= 10000
			ELSEIF 攻撃対象:DID == -1
				SELECTCASE CRESULT:1
					CASE 0 TO 2
						IF GETCHARA(部隊メンバー:部隊ID:(CRESULT:1)) >= 0
							攻撃対象:DID = CRESULT:1
							;ダメージ計算式は後で作る
							ダメージ:DID = 5
						ENDIF
					CASE 10 TO 14
						IF 敵名:DID:(CRESULT:1-10) != ""
							攻撃対象:DID = CRESULT:1
							;ダメージ計算式は後で作る
							ダメージ:DID = 5
						ENDIF
				ENDSELECT
			ENDIF
		CASEELSE
			SELECTCASE CRESULT:1
				CASE 20
					行動内容:DID = 通常攻撃
				CASE 21
					行動内容:DID = スキル
				CASE 22
					行動内容:DID = アイテム
				CASE 23
					行動内容:DID = 逃走
			ENDSELECT
	ENDSELECT
ELSE
	敵ステータス:DID:(行動可能:DID-10):TG -= 10000
ENDIF

@探索画面, DID
#DIM DYNAMIC DID
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC 部隊ID
#DIMS DYNAMIC ダンジョン表示用

部隊ID = FINDELEMENT(部隊目標, DID)

CALL 部隊メンバー表示, 部隊ID
CALL COLUMNPRINTL, 0, ""
IF 戦闘中:DID || ダンジョンクリア:DID
	CALL COLUMNPRINTL, 0, ""
ELSE
	CALL COLUMNPRINTL, 0, "[3] - アイテム"
ENDIF
CALL COLUMNPRINTL, 0, ""
CALL COLUMNPRINTL, 0, @"現在の進行度:{進行度:DID}/{ダンジョンレベル(DID)+10}"
FOR LCOUNT, 1, ダンジョンレベル(DID)+11
	IF LCOUNT == 進行度:DID
		ダンジョン表示用 += "■"
	ELSE
		ダンジョン表示用 += "□"
	ENDIF
NEXT
CALL COLUMNPRINTL, 0, @"%ダンジョン表示用%"
IF 戦闘中:DID
	CALL COLUMNPRINTL, 0, "敵と遭遇した！" 
	CALL COLUMNPRINTL, 0, "[10] 戦闘開始"
ELSE 
	IF ダンジョンクリア:DID
		IF ダンジョンクリア:DID == 1
			CALL COLUMNPRINTL, 0, @"%ダンジョン名(DID)%を制覇した！" 
		ELSEIF ダンジョンクリア:DID == 2
			CALL COLUMNPRINTL, 0, @"%ダンジョン名(DID)%を探索する部隊{部隊ID}は全滅した……" 
		ELSEIF ダンジョンクリア:DID == 3
			CALL COLUMNPRINTL, 0, @"%ダンジョン名(DID)%の探索を中断した" 
		ENDIF

		IF オールクリア
			CALL COLUMNPRINTL, 0, "全ダンジョンの探索を終えた"
			CALL COLUMNPRINTL, 0, "[30] 帰還する"
		ENDIF
	ELSE
		CALL COLUMNPRINTL, 0, @"%RETURNSPACE(進行度:DID > 1, "[10] 戻る")% %RETURNSPACE(進行度:DID < ダンジョンレベル(DID)+10, "[19] 進む")%"
		IF 帰還確認:DID
			CALL COLUMNPRINTL, 0, "探索は終了していません。本当に脱出しますか？"
			CALL COLUMNPRINTL, 0, "[20] はい [21] いいえ"
		ELSE
			SIF 進行度:DID == 1
				CALL COLUMNPRINTL, 0, "[20] ダンジョンから脱出する"
		ENDIF
	ENDIF
ENDIF

@探索画面_INPUT, DID
#DIM DYNAMIC DID
#DIM DYNAMIC 部隊ID

部隊ID = FINDELEMENT(部隊目標, DID)

IF アイテム表示中:DID
	IF アイテム使用中:DID
		IF 対象無し(アイテム使用中:DID)
			SELECTCASE CRESULT:1
				CASE 0
					CALL アイテム使用, アイテム使用中:DID
				CASE 1
					アイテム使用中:DID = -1
			ENDSELECT
		ELSE
			SELECTCASE RESULT:1
				CASE 0 TO 2
					CALL アイテム使用, アイテム使用中:DID, GETCHARA(部隊メンバー:部隊ID:(CRESULT:1))
				CASE 3
					アイテム使用中:DID = -1
			ENDSELECT
		ENDIF
	ELSE
		SELECTCASE CRESULT:1
			CASE -1
				アイテム表示中:DID = 0
			CASE 0 TO DT_ROW_LENGTH("アイテム")-1
				SIF 所有部隊(CRESULT:1) == 部隊ID
					アイテム使用中 = CRESULT:1
		ENDSELECT
	ENDIF
ELSEIF ステータス表示中:DID >= 0
	SELECTCASE CRESULT:1
	ENDSELECT
ELSE
	IF 戦闘中:DID
		戦闘中:DID = 2
	ELSE
		SELECTCASE CRESULT:1
			CASE 0 TO 2
				SIF 部隊メンバー:部隊ID:(CRESULT:1)
					CALL キャラ詳細表示, 部隊メンバー:部隊ID:(CRESULT:1)
			CASE 3
				アイテム表示中:DID = 1
				CALL 部隊アイテム表示
			CASE 10
				IF 進行度:DID > 1
					進行度:DID--
					CALL エンカウント, DID
				ENDIF
			CASE 19
				IF 進行度:DID < ダンジョンレベル(DID)+10
					進行度:DID++
					CALL エンカウント, DID
				ENDIF
			CASE 20
				IF 帰還確認:DID
					ダンジョンクリア:DID = 3
				ELSE
					帰還確認:DID = 1
				ENDIF
			CASE 21
				帰還確認:DID = 0
			CASE 30
				SIF オールクリア
					LOOP_BREAK = 1
		ENDSELECT
	ENDIF
ENDIF
	
@エンカウント, DID
#DIM DYNAMIC DID
#DIM DYNAMIC 部隊ID
#DIM DYNAMIC LCOUNT

部隊ID = FINDELEMENT(部隊目標, DID)

;とりあえず雑に作っておく
エンカウント率:DID *= 2

IF RANDPER(エンカウント率:DID-部隊運勢(部隊ID))
	;エンカウント処理
	エンカウント率:DID = 1
	戦闘中:DID = 1
	;数はランダム
	;ステータス生成は仮
	FOR LCOUNT, 0, RAND(1, 5)
		敵名:DID:LCOUNT = ハウンド
		IF ダンジョンレベル(DID) <= 2
			敵ステータス:DID:LCOUNT:レベル = RAND:ダンジョンレベル(DID)+1
		ELSE
			敵ステータス:DID:LCOUNT:レベル = RAND(ダンジョンレベル(DID)-2, ダンジョンレベル(DID)+1)
		ENDIF
		敵ステータス:DID:LCOUNT:HP = 10+(敵ステータス:DID:LCOUNT:レベル*2)
		敵ステータス:DID:LCOUNT:筋力 = 1
		敵ステータス:DID:LCOUNT:器用 = 1
		敵ステータス:DID:LCOUNT:知性 = 1
		敵ステータス:DID:LCOUNT:耐久 = 1
		敵ステータス:DID:LCOUNT:感覚 = 1
		敵ステータス:DID:LCOUNT:運勢 = 1
		敵ステータス:DID:LCOUNT:TG = 0
	NEXT
	FOR LCOUNT, 0, 3
		SIF !部隊メンバー:部隊ID:LCOUNT
			CONTINUE
		ステータス:GETCHARA(部隊メンバー:部隊ID:LCOUNT):TG = 0
	NEXT
ENDIF

IF 進行度:DID == ダンジョンレベル(DID)+10
	PRINTFORMW ここでボス戦
	ダンジョンクリア:DID = 1
ENDIF

